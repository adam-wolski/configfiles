# vim: fdm=marker foldenable
#!/bin/bash
export CONFIG_FOLDER="/home/miniu/git/configfiles"
export QT_STYLE_OVERRIDE=GTK+

# Aliases {{{

# Script shortcuts {{{

alias aclc='cautoclick -r 1 -n 99999 -p 2000 -i '
alias reloadMASTER='source $CONFIG_FOLDER/MASTERSCRIPT'
alias reloadZSH='source ~/.zshrc'
alias ww='sh ~/.config/wacomconfig'

# }}}
# Vim {{{

alias vimvim='$EDITOR ~/.vimrc' 
alias vimnvim='$EDITOR ~/.config/nvim/init.vim' 
alias vimmaster='$EDITOR $CONFIG_FOLDER/MASTERSCRIPT'
alias vimzsh='$EDITOR ~/.zshrc'
alias vimi3='$EDITOR $CONFIG_FOLDER/i3/config'
alias vim='$EDITOR'
alias v='$EDITOR'
alias qnvim='nvim-qt'
alias pyvim='PYTHONPATH=./ nvim'

# }}}
# cd {{{

alias cdbin='cd ~/bin/'
alias cdb='cd ~/builds/'
alias cdc='cd ~/git/configfiles'

# }}}
# pacman {{{

alias pupg='sudo pacman -Syu'               # Synchronize with repositories and then upgrade packages that are out of date on the local system.
alias p='sudo pacman -S'              
alias pu='sudo pacman -U'             
alias prem='sudo pacman -Rns'               # Remove the specified package(s), its configuration(s) and unneeded dependencies
alias prepinfo='pacman -Si'                 # Display information about a given package in the repositories
alias preps='pacman -Ss'                    # Search for package(s) in the repositories
alias pinfo='pacman -Qi'                    # Display information about a given package in the local database
alias psearch='pacman -Qs'                  # Search for package(s) in the local database

# package info
alias pfiles='pkgfile -l'
alias pfilesupdate='sudo pkgfile --update'

# aur aliases
alias aurupg='pacaur -Syu'                  # Synchronize with repositories and then upgrade packages that are out of date on the local system.
alias aur='pacaur -S --noedit'              
alias aurs='cower --sort votes -s'          # Search
alias aursearch='cower --sort votes -s'     # Search
alias aurclearcache='rm -rf ~/.cache/pacaur'

# }}}
# other {{{

alias o='xdg-open'
alias rnm='sudo systemctl restart NetworkManager'
alias s='sudo'                        
alias wylaczScreenSaver='xset -dpms; xset s off; setterm -blank 0 -powerdown 0'
alias n='ncmpcpp'
alias shutup='sudo shutdown -h now'
alias sus='sudo systemctl suspend'
alias xbox='sudo xboxdrv -D --detach-kernel-driver'
alias valg='valgrind --track-origins=yes --leak-check=full'
alias valgv='valgrind --track-origins=yes --leak-check=full -v'
alias valgs='valgrind --track-origins=yes'
alias rnm='sudo systemctl restart NetworkManager'
alias py='python'
alias ptpython='ptpython --vi'
alias e='$EDITOR'
alias ev='qvim'                               #Editor gui
alias pyev='pynvim'
alias sx='startx'
alias wine='PULSE_LATENCY_MSEC=60 wine'       #Fix for audio playing to fast
alias xboxdrvDarkSouls='sudo xboxdrv --detach-kernel-driver --buttonmap 1=3,3=1,2=4,4=2,rt=start,lt=back,start=rt,back=lt --ui-buttonmap guide=KEY_LEFTSHIFT+KEY_TAB,rt=KEY_END,lt=KEY_G --detach --dbus disabled --daemon' #Fix for not correct mapping in dark souls
alias pulseaudiofix='PULSE_LATENCY_MSEC=60'
alias winesteam='wine "/home/miniu/.wine/drive_c/Program Files (x86)/Steam/Steam.exe" --no-dwrite'
alias pasds='pactl set-default-sink'
alias pals='pactl list sinks'
alias palsb='pactl list sinks | grep -B 2 Blaster'
alias wacomDisableTouch="xsetwacom --set 'Wacom Bamboo 2FG 4x5 Finger touch' touch off"
alias irc='weechat'
alias youtube-dl-allnighter='youtube-dl -i --retries infinite'
alias i3-exit='i3-msg exit'
alias set_backlight='sudo tee /sys/class/backlight/intel_backlight/brightness <<< ' # Set backlight on laptopn goes from 0 to 999

# }}}

# }}}
