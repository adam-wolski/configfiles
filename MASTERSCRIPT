#!/bin/bash
export CONFIG_FOLDER="/home/miniu/git/configfiles"
export QT_STYLE_OVERRIDE=GTK+

# ==============
# Aliases
# ==============
#
# Script shortcut aliases
alias aclc='cautoclick -r 1 -n 99999 -p 2000 -i '
alias reloadMASTER='source $CONFIG_FOLDER/MASTERSCRIPT'
alias reloadZSH='source ~/.zshrc'
alias ww='sh ~/.config/wacomconfig'

# Vim aliases
alias vimvim='$EDITOR ~/.vimrc' 
alias vimnvim='$EDITOR ~/.nvimrc' 
alias vimvimvim='$EDITOR $CONFIG_FOLDER/vimsettings.vim'
alias vimMASTER='$EDITOR $CONFIG_FOLDER/MASTERSCRIPT'
alias vimzsh='$EDITOR ~/.zshrc'
alias vimi3='$EDITOR $CONFIG_FOLDER/i3wmconfig'
alias v='vim'

# GIT aliases
alias pull='git pull'
alias push='git push origin master'
alias status='git status'
alias commit='git commit -a -m'

# cd aliases
alias cdbin='cd ~/bin/'
alias cdb='cd ~/builds/'
alias cdc='cd ~/git/configfiles'

# pacman aliases
alias pupg='sudo pacman -Syu'               # Synchronize with repositories and then upgrade packages that are out of date on the local system.
alias p='sudo pacman -S'              
alias pu='sudo pacman -U'             
alias prem='sudo pacman -Rns'               # Remove the specified package(s), its configuration(s) and unneeded dependencies
alias prepinfo='pacman -Si'                 # Display information about a given package in the repositories
alias preps='pacman -Ss'                    # Search for package(s) in the repositories
alias pinfo='pacman -Qi'                    # Display information about a given package in the local database
alias psearch='pacman -Qs'                  # Search for package(s) in the local database

# other aliases
alias rnm='sudo systemctl restart NetworkManager'
alias s='sudo'                        
alias wylaczScreenSaver='xset -dpms; xset s off; setterm -blank 0 -powerdown 0'
alias n='ncmpcpp'
alias shutup='sudo shutdown -h now'
alias sus='sudo systemctl suspend'
alias xbox='sudo xboxdrv -D --detach-kernel-driver'
alias valg='valgrind --track-origins=yes --leak-check=full'
alias valgv='valgrind --track-origins=yes --leak-check=full -v'
alias valgs='valgrind --track-origins=yes'
alias rnm='sudo systemctl restart NetworkManager'
alias cower='cower --sort votes'
alias py='python'
alias e='$EDITOR'
alias ev='pynvim' #Editor gui
